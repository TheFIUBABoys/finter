= form_for(:topics, as: :topics, url: topics_path) do |f|
  %h4 Create New #{:topics.to_s.humanize}
  .row
    .small-6.columns.field
      %label
        = f.label :name
        = f.text_field :name, autofocus: true
    .small-6.columns.field
      %label
        = f.label :description
        = f.text_field :description
    .columns.field
      %label
        = f.label :twitter_keywords
        = f.text_area :twitter_keywords
    .small-6.columns.field
      %label
        = f.label :notification_type
        = f.text_field :notification_type
    .small-6.columns.field
      %label
        = f.label :icon_name
        = f.text_field :icon_name
    .columns.field
      %label
        = f.check_box :promoted
        = f.label :promoted
    .columns
      %button.tiny(type="submit") Create
