.row
  .col-xs-12.col-md-6.col-md-offset-2
    %h2 Log in
  .col-xs-12.col-md-6.col-md-offset-2
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %div= devise_error_messages!
      .form-group
        = f.label :email
        = f.email_field :email, autofocus: true, class: 'form-control', required: true
      .form-group
        = f.label :password
        = f.password_field :password, autocomplete: 'off', class: 'form-control', required: true
      - if devise_mapping.rememberable?
        .checkbox
          %label
            = f.check_box :remember_me
            = f.label :remember_me
      %button.btn.btn-primary(type="submit") Log In

      %div= render 'devise/shared/links'
