.row
  .small-6.small-centered.columns
    %h4 Edit #{resource_name.to_s.humanize}
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .row
        .columns= devise_error_messages!
        .columns.field
          %label
            = f.label :username
            = f.text_field :username, autofocus: true
        .columns.field
          %label
            = f.label :email
            = f.email_field :email
        .columns.field
          %label
            = f.label :password
            %i (leave blank if you don't want to change it)
            = f.password_field :password, autocomplete: 'off'
        .columns.field
          %label
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: 'off'
        .columns.field
          %label
            = f.label :current_password
            %i (we need your current password to confirm your changes)
            = f.password_field :current_password, autocomplete: 'off'
        .columns
          %button.tiny(type="submit") Update

%hr

.row
  .small-6.small-centered.columns
    %h5 Unhappy?
    = link_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'button alert tiny'


