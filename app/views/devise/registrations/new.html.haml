.row
  .col-xs-12.col-md-6.col-md-offset-2
    %h4 Sign up
  .col-xs-12.col-md-6.col-md-offset-2
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      %div= devise_error_messages!
      .form-group
        = f.label :username
        = f.text_field :username, autofocus: true, class: 'form-control', required: true
      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control', required: true
      .form-group
        = f.label :password
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: 'off', class: 'form-control', required: true
      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', required: true
      .checkbox
        %label
          = f.check_box :admin
          = f.label :admin
      .checkbox
        %label
          = f.check_box :pro
          = f.label :pro
      %button.btn.btn-primary(type="submit") Sign Up

      %div= render 'devise/shared/links'
